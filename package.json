{
  "name": "tcp-udp-router",
  "version": "1.0.0",
  "description": "Professional TCP/UDP Router with middleware, plugin system, and metrics",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "mocha test/**/*.test.ts --require ts-node/register",
    "test:unit": "mocha test/unit/**/*.test.ts --require ts-node/register",
    "test:integration": "mocha test/integration/**/*.test.ts --require ts-node/register",
    "test:coverage": "nyc mocha test/**/*.test.ts --require ts-node/register",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "benchmark": "ts-node src/benchmark/cli.ts",
    "benchmark:stress": "ts-node src/benchmark/cli.ts stress",
    "benchmark:load": "ts-node src/benchmark/cli.ts run -d 60 -c 10",
    "docker:build": "docker build -t tcp-udp-router .",
    "docker:run": "docker run -p 4000:4000 -p 5000:5000 -p 8080:8080 tcp-udp-router",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@slack/webhook": "^7.0.6",
    "@types/node": "^24.3.0",
    "axios": "^1.12.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.1",
    "express": "^4.19.2",
    "express-rate-limit": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "minecraft-protocol": "^1.54.0",
    "nodemailer": "^7.0.6",
    "prom-client": "^15.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "winston": "^3.14.2",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.14.2",
    "chai": "^4.5.0",
    "commander": "^11.1.0",
    "mocha": "^10.7.3",
    "nyc": "^15.1.0",
    "ts-node-dev": "^2.0.0"
  }
}
